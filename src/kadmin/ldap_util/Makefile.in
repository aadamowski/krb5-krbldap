thisconfigdir=./..
myfulldir=kadmin/ldap_util
mydir=ldap_util
BUILDTOP=$(REL)..$(S)..
DEFINES = -DKDB4_DISABLE
DEFS = @DEFS@ -DHAVE_LDAP_H
LOCALINCLUDES = -I. @KRB4_INCLUDES@ -I$(SRCTOP)/plugins/kdb/kdb_ldap -I$(SRCTOP)/lib/kdb
PROG_LIBPATH=-L$(TOPLIBD) $(KRB4_LIBPATH) -L$(BUILDTOP)/plugins/kdb/kdb_ldap
PROG_RPATH=$(KRB5_LIBDIR)
#KDB_DEP_LIB=$(DL_LIB) $(THREAD_LINKOPTS)
KDB_DEP_LIB=$(DL_LIB) -lkldap $(THREAD_LINKOPTS)

PROG = kdb5_ldap_util
OBJS = kdb5_ldap_util.o kdb5_ldap_list.o kdb5_ldap_realm.o kdb5_ldap_policy.o kdb5_ldap_services.o getdate.o

all:: $(PROG)

$(PROG): $(OBJS) $(KADMSRV_DEPLIBS) $(KRB4COMPAT_DEPLIBS)
	$(CC_LINK) -o $(PROG) $(OBJS) $(KADMSRV_LIBS) $(KDB_DEP_LIB) $(KRB4COMPAT_LIBS)

install::
	$(INSTALL_PROGRAM) $(PROG) ${DESTDIR}$(ADMIN_BINDIR)/$(PROG)

clean::
	$(RM) $(PROG) $(OBJS) 

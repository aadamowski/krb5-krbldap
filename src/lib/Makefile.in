CFLAGS = $(CCOPTS) $(DEFS)

##DOSBUILDTOP = ..
##DOSVERS_DIR = \vers

MAC_SUBDIRS = crypto KRB5 gssapi kadm

all-unix::

all-mac::

CLEANLIBS = libkrb5.a libkdb5.a libcrypto.a libgssapi_krb5.a libdes425.a \
	libkrb425.a libkadm.a libkrb4.a libcom_err.a libpty.a \

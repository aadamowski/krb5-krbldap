BUILDTOP=./../../$(top_dir)
SRCTOP=$(top_srcdir)/../..

CFLAGS = $(CCOPTS) $(DEFS)

##DOSBUILDTOP = ..\..\..
##DOSLIBNAME=..\krb5.lib

.c.o:
	$(CC) $(CFLAGS) -c $(srcdir)/$*.c
@SHARED_RULE@

OBJS=	\
	rc_base.$(OBJEXT)	\
	rc_dfl.$(OBJEXT) 	\
	rc_io.$(OBJEXT)		\
	rcdef.$(OBJEXT)		\
	rc_conv.$(OBJEXT)	\
	ser_rc.$(OBJEXT)

SRCS=	\
	$(srcdir)/rc_base.c	\
	$(srcdir)/rc_dfl.c 	\
	$(srcdir)/rc_io.c	\
	$(srcdir)/rcdef.c	\
	$(srcdir)/rc_conv.c	\
	$(srcdir)/ser_rc.c

all-unix:: shared $(OBJS) DONE
DONE: $(OBJS)
	@echo $(OBJS) > DONE

all-mac:: $(OBJS)
all-windows:: $(OBJS)

shared:
	mkdir shared

clean-mac::
clean-windows::

clean-unix::
	$(RM) shared/*
